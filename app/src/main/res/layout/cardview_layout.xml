<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cardview_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contact det"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:elevation="@dimen/elevation"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_note_title"
            android:id="@+id/note_item1"
            android:textSize="@dimen/subtitle"
            android:elevation="@dimen/elevation"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_item1"
            android:id="@+id/note_item2"
            android:textSize="@dimen/subtitle"
            android:elevation="@dimen/elevation"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_item2"
            android:id="@+id/note_item3"
            android:textSize="@dimen/subtitle"
            android:elevation="@dimen/elevation"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_item3"
            android:id="@+id/note_item4"
            android:textSize="@dimen/subtitle"
            android:elevation="@dimen/elevation"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>